out_dir = 'dist'
cjs = true
minify = true

[safe]
modules = 'src/safe/**/*.ts'
out_dir = 'dist/safe'
ejs = true
mjs = true

[unsafe]
modules = 'src/unsafe/**/*.ts'
out_dir = 'dist/unsafe'
ejs = true
mjs = true

[safe_bundle]
modules = 'src/safe.ts'

[unsafe_bundle]
modules = 'src/unsafe.ts'

[hikidashi_module]
modules = 'src/index.ts'

[hikidashi_bundle]
modules = 'src/*safe/**/index.ts'

[export_tests]
modules = 'tests/*.test.*'
out_dir = 'tests/dist/'

[safe_tests]
modules = 'tests/safe/**/*.ts'
out_dir = 'tests/dist/safe'

[unsafe_tests]
modules = 'tests/unsafe/**/*.ts'
out_dir = 'tests/dist/unsafe'

[benches_bundle]
modules = '*/*.ts'
out_dir = 'dist'
